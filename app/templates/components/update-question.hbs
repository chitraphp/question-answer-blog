{{#if updateQuestionForm}}
  <h4>Update {{question.owner}}'s {{question.type}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="questionAttr">Type</label>
          {{input value=questionAttr id="questionAttr" placeholder=question.questionAttr}}
        </div>

        <div class="form-group">
          <label for="notes">Number of Bedrooms</label>
          {{textarea rows="2" cols="25" value=notes id="notes" placeholder=question.notes}}
        </div>
        
        <button {{action 'updateQuestion' question}}>Update</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
