{{#if addNewAnswerForm}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name:</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="answerAttr">Answer:</label>
          {{textarea rows="3" cols="30" value=answerAttr id="answerAttr"}}
        </div>

        <button {{action 'saveAnswer' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'showAnswerForm'}}>New Answer</button>
{{/if}}
