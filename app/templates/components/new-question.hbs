{{#if addQuestionForm}}
  <h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Name:</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="questionAttr">Question:</label>
          {{input value=questionAttr id="questionAttr"}}
        </div>

        <div class="form-group">
          <label for="notes">Notes:</label>
          {{textarea rows="2" cols="40" value=notes id="notes"}}
        </div>

        <button {{action 'saveQuestion'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'showQuestionForm'}}>New Question</button>
{{/if}}
